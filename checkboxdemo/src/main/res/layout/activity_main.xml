<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.checkboxdemo.MainActivity">
                <Button
                    android:id="@+id/buttonAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全选"/>
                <Button
                    android:id="@+id/buttonNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不选"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/buttonHind"
                    android:layout_toEndOf="@+id/buttonHind" />
                <Button
                    android:id="@+id/buttonHind"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="隐藏"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/buttonFan"
                    android:layout_toEndOf="@+id/buttonFan" />
                <Button
                    android:id="@+id/buttonFan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="反选"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/buttonAll"
                    android:layout_toEndOf="@+id/buttonAll" />
                <ListView
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_below="@+id/buttonAll"></ListView>
</RelativeLayout>
